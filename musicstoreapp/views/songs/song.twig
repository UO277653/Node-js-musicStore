{% extends "layout.twig" %}

{% block title %} Detalles de canción {% endblock %}

{% block main_container %}
	 <div class="row">
		<div class="media col-xs-10">
		  <div class="media-left media-middle">
			<img class="media-object" src="/covers/{{song._id}}.png" >
		  </div>
		  <div class="media-body">
			 <h2>{{song.title}}</h2>
			 <p>{{song.author}}</p>
			 <p>{{song.kind}}</p>

			  {% if bought or (song.author == user) %}
				  <audio controls>
					  <source src="/audios/{{ song._id }}.mp3" type="audio/mpeg">
				  </audio>
			  {% endif %}

			  {% if song.author != user and not bought %}
				  <a class="btn btn-primary pull-right" href="/songs/buy/{{ song._id }}">{{ song.price }} €</a>
			  {% endif %}
		  </div>
		</div>
	  </div>

	<h1> Comentarios </h1>
		<tr>
			<th>Autor</th>
			<th>Texto</th>
			<th class="col-md-1"></th>
		</tr>
	<div>
	{% for comment in comments %}
		<tr>
			<td>{{ comment.author }}</td>
			<td>{{ comment.text }}</td>
			<br>
		</tr>
	{% endfor %}
	</div>

	<h2>Agregar comentario</h2>
	<form class="form-horizontal" method="post" action="/comments/{{ song._id }}">
